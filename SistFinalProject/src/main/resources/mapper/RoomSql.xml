<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sist.last.mapper.RoomMapperInter">
	
	<insert id="insertRoom" parameterType="RoomDto">
        insert into room(room_name,room_price,room_minpeople,room_maxpeople,room_location,room_photo,room_info,accom_num)
        values (#{room_name},#{room_price},#{room_minpeople},#{room_maxpeople},#{room_location},#{room_photo},#{room_info},#{accom_num})
    </insert>
    
    <select id="getAllData" resultType="RoomDto">
    	select * from room order by room_num
    </select>
    
    <select id="getTotalCount" resultType="int">
        select count(*) from finalproject.accom
    </select>
</mapper>